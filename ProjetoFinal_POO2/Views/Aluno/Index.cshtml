@{
    ViewData["Title"] = "Aluno";
}

@model Aluno

<div class="text-center">
    <h1 class="display-4">Bem vindo ao sistema de alunos</h1>
    @using (Html.BeginForm("CreateAluno", "Aluno"))
    {
        <form method="post">
            <fieldset data-bind="model" >
                <legend>Cadastrar aluno</legend>
                <div>
                    <label asp-for="Nome">Nome do aluno:</label>
                    <input asp-for="Nome" type="text" name="Nome" value="" />
                </div>
                <div>
                    <label asp-for="CPF">CPF:</label>
                    <input asp-for="CPF" type="text" name="CPF" value="" />
                </div>
                <div>
                    <label asp-for="Matricula">Matricula:</label>
                    <input asp-for="Matricula" type="text" name="Matricula" value="" />
                </div>
                <div>
                    <label>&nbsp;</label>
                    <input type="submit" value="Cadastrar" class="submit" />
                </div>
            </fieldset>
        </form>
    }

</div>
